# ===========================================
# NEON POSTGRES
# Obtenha em: https://console.neon.tech
# ===========================================
DATABASE_URL="postgresql://user:password@host-pooler.region.aws.neon.tech/neondb?sslmode=require&pgbouncer=true"
DIRECT_URL="postgresql://user:password@host.region.aws.neon.tech/neondb?sslmode=require"

# ===========================================
# NEXTAUTH
# Gere uma chave segura: openssl rand -base64 32
# ===========================================
NEXTAUTH_SECRET="sua-chave-secreta-segura-aqui"
NEXTAUTH_URL="https://seu-dominio.vercel.app"

# ===========================================
# ASAAS - Sistema de Pagamentos
# Obtenha em: https://www.asaas.com/desenvolvedores
# Sandbox: https://sandbox.asaas.com
# Producao: https://www.asaas.com
# ===========================================
ASAAS_API_KEY="$aact_..."
ASAAS_ENVIRONMENT="sandbox"
ASAAS_WEBHOOK_TOKEN="seu-token-secreto-para-webhook"

# ===========================================
# URL DA APLICACAO
# ===========================================
NEXT_PUBLIC_APP_URL="https://seu-dominio.vercel.app"

# ===========================================
# MODULO: NOTIFICACOES
# Ative para enviar emails automaticos
# ===========================================
FEATURE_NOTIFICATIONS_ENABLED="false"
NOTIFICATIONS_EMAIL_ENABLED="false"
NOTIFICATIONS_EMAIL_PROVIDER="resend"
NOTIFICATIONS_EMAIL_FROM="Passback <noreply@passback.com.br>"
NOTIFICATIONS_EMAIL_REPLY_TO="suporte@passback.com.br"

# Resend (recomendado) - https://resend.com
RESEND_API_KEY="re_xxxx"

# Ou SendGrid - https://sendgrid.com
# SENDGRID_API_KEY="SG.xxxx"

# ===========================================
# MODULO: CHAT
# Comunicacao entre comprador e vendedor
# ===========================================
FEATURE_CHAT_ENABLED="false"
CHAT_EMAIL_NOTIFICATIONS="false"

# ===========================================
# MODULO: VERIFICACAO DE IDENTIDADE
# Selfie com documento para seguranca
# ===========================================
FEATURE_IDENTITY_ENABLED="false"
IDENTITY_REQUIRE_FOR_SELLING="true"
IDENTITY_REQUIRE_ABOVE="500"

# ===========================================
# MODULO: AVALIACOES
# Sistema de reviews pos-transacao
# ===========================================
FEATURE_REVIEWS_ENABLED="false"

# ===========================================
# MODULO: CUPONS
# Descontos promocionais
# ===========================================
FEATURE_COUPONS_ENABLED="false"

# ===========================================
# MODULO: FAVORITOS
# Salvar ingressos e alertas de preco
# ===========================================
FEATURE_FAVORITES_ENABLED="false"
FAVORITES_ALERTS_ENABLED="false"

# ===========================================
# MODULO: QR CODE DE ENTRADA
# QR Code unico para validacao no evento
# ===========================================
FEATURE_ENTRY_QR_ENABLED="false"
ENTRY_QR_SECRET="sua-chave-secreta-aqui"

# ===========================================
# MODULO: TRANSFERENCIA DE INGRESSO
# Permite transferir ingresso para outro usuario
# ===========================================
FEATURE_TRANSFER_ENABLED="false"

# ===========================================
# MODULO: REGISTRO APRIMORADO
# Exige WhatsApp e CPF obrigatorios no cadastro
# ===========================================
NEXT_PUBLIC_MODULE_ENHANCED_REGISTRATION="false"

# ===========================================
# MODULO: OFERTAS
# Sistema de ofertas em ingressos
# ===========================================
NEXT_PUBLIC_MODULE_OFFERS="false"
# Token para cron job de expiracao (opcional)
# CRON_SECRET="seu-token-secreto"

# ===========================================
# MODULO: LISTA DE ESPERA
# Fila para ingressos nao disponiveis
# ===========================================
NEXT_PUBLIC_MODULE_WAITLIST="false"

# ===========================================
# MODULO: DETECCAO DE FRAUDE
# Analise de risco e alertas automaticos
# ===========================================
NEXT_PUBLIC_MODULE_FRAUD="false"
# Token para chamadas internas (opcional)
# INTERNAL_API_TOKEN="seu-token-interno"

# ===========================================
# MODULO: ANALYTICS
# Dashboard de metricas e insights
# ===========================================
NEXT_PUBLIC_MODULE_ANALYTICS="false"

# ===========================================
# MODULO: PRECIFICACAO INTELIGENTE
# Sugestao de preco baseada em mercado
# ===========================================
NEXT_PUBLIC_MODULE_PRICING="false"
